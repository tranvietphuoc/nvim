{
  "coc.preferences.formatOnSaveFiletypes": [
    "javascript",
    "typescript",
    "python",
    "go",
    "json",
    "rust",
    "javascriptreact",
    "typescriptreact",
    "css",
    "markdown"
  ],
  "eslint.probe": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "vue",
    "markdown",
    "html"
  ],
  "eslint.validate": [
    "javascript",
    "typescript",
    "typescriptreact",
    "javascriptreact",
    "vue",
    "markdown",
    "html"
  ],
  "pyright.enable": true,
  "python.analysis.autoImportCompletions": true,
  "python.venvPath": "./.venv/",
  "python.pythonPath": "./.venv/bin/python",
  "python.linting.enabled": true,
  "python.linting.flake8Enabled": true,
  "python.formatting.blackPath": "black",
  "python.formatting.provider": "black",
  "python.linting.lintOnSave": true,

  "languageserver": {
    "golang": {
      "command": "gopls",
      "rootPatterns": ["go.mod"],
      "filetypes": ["go"],
      "disableWorkspaceFolders": true
    },
    "rust": {
      "command": "rust-analyzer",
      "filetypes": ["rust"],
      "rootPatterns": ["Cargo.toml"]
    },
    "sql": {
      "command": "sql-language-server",
      "args": ["up", "--method", "stdio"],
      "filetypes": ["sql", "mysql"]
    },
    "lua": {
      "command": "/Users/phuoc/lua-language-server/bin/macOS/lua-language-server",
      "args": ["-E", "/Users/phuoc/lua-language-server/main.lua"],
      "filetypes": ["lua"],
      "rootPatterns": [".git/"]
    },
    "ccls": {
      "command": "ccls",
      "filetypes": ["c", "cc", "cpp", "objc", "objcpp", "cuda"],
      "rootPatterns": [
        "/Users/phuoc/.config/nvim/.ccls",
        "compile_commands.json",
        ".vim/",
        ".git/",
        ".hg/"
      ],
      "initializationOptions": {
        "cache": {
          "directory": "/tmp/ccls"
        },
        "clang": {
          "extraArgs": [
            "-isytem/Library/Developer/CommandLineTools/usr/bin/../include/c++/v1",
            "-isytem/Library/Developer/CommandLineTools/usr/lib/clang/12.0.0/include",
            "-isytem/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/usr/include",
            "-isytem/Library/Developer/CommandLineTools/usr/include",
            "-isytem/Library/Developer/CommandLineTools/SDKs/MacOSX.sdk/System/Library/Frameworks"
          ],
          "resourceDir": "/Library/Developer/CommandLineTools/usr/lib/clang/12.0.0"
        }
      }
    }
  }
}
